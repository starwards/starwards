{
    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "test all",
            "program": "${workspaceFolder}/node_modules/jest/.bin/jest",
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            },
            "args": [
                "--runInBand"
            ],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "run server",
            "type": "pwa-node",
            "request": "launch",
            "preLaunchTask": "build:model",
            "cwd": "${workspaceFolder}",
            "args": [
                "-r",
                "ts-node/register/transpile-only",
                "${workspaceFolder}/modules/server/src/dev.ts"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "debug chrome",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "webpack: dev server",
            "url": "http://localhost/",
            "sourceMaps": true,
            "trace": true,
            "webRoot": "${workspaceFolder}/modules",
            "sourceMapPathOverrides": {
                "webpack://@starwards/*": "${webRoot}/*"
            }
        },
        {
            "name": "attach to chrome",
            "type": "chrome",
            "request": "attach",
            "url": "http://localhost:8080/gm.html",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*"
            }
        },
        {
            "type": "node-terminal",
            "name": "Run Script: start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}"
        }
    ]
}