{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "label": "build:core",
            "detail": "build core and watch for changes",
            "options": {
                "cwd": "./modules/core"
            },
            "script": "build:watch",
            "problemMatcher": ["$tsup-watch", "$tsup-tsc-watch"],
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watchers"
            }
        },
        {
            "type": "npm",
            "label": "webpack: dev server",
            "script": "start",
            "promptOnClose": true,
            "isBackground": true,
            "options": {
                "cwd": "./modules/browser",
                "env": {
                    "NODE_OPTIONS": "--openssl-legacy-provider"
                }
            },
            "problemMatcher": {
                "owner": "webpack",
                "severity": "error",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "ERROR in (.*)",
                        "file": 1
                    },
                    {
                        "regexp": "\\((\\d+),(\\d+)\\):(.*)",
                        "line": 1,
                        "column": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "compiled successfully in",
                    "endsPattern": "Compiled successfully"
                }
            }
        }
    ]
}
