{
    "name": "@starwards/core",
    "description": "a space and starship simulator designed specifically for LARPs",
    "keywords": [
        "sbs",
        "larp",
        "game",
        "simulator",
        "starship",
        "space",
        "colyseus"
    ],
    "version": "0.5.1",
    "main": "cjs/index.js",
    "types": "cjs/index.d.ts",
    "repository": "git@github.com:starwards/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "engines": {
        "node": ">= 18"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "files": [
        "cjs",
        "src"
    ],
    "scripts": {
        "clean": "rimraf ./cjs",
        "postbuild": "npm pack --quiet",
        "prebuild": "npm run clean",
        "build": "tsup-node",
        "build:unity": "schema-codegen src/space/space-state.ts --output ./unity-schema/ --decorator gameField --csharp",
        "build:watch": "tsup-node --watch"
    },
    "dependencies": {
        "@colyseus/schema": "^3.0.68",
        "colyseus-events": "^4.0.2",
        "colyseus.js": "^0.16.22",
        "detect-collisions": "^10.10.2025",
        "eventemitter2": "^6.4.9",
        "eventemitter3": "^5.0.1",
        "json-ptr": "^3.1.1",
        "normal-distribution": "^1.1.1",
        "reflect-metadata": "^0.2.2",
        "ts-essentials": "^10.1.1",
        "tslib": "^2.8.1",
        "ws": "^8.18.3",
        "xstate": "^5.24.0"
    }
}
