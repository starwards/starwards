{
    "name": "starwards",
    "repository": "git@github.com:starwards/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "private": true,
    "engines": {
        "node": ">= 15.11",
        "npm": ">= 7.5.4"
    },
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "clean": "rimraf ./modules/browser/dist ./modules/model/cjs ./modules/server/cjs",
        "prebuild": "npm run clean",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettify": "prettier \"./modules/*/src/**/*.{ts,tsx,json}\" --write",
        "build:browser": "webpack --config ./modules/browser/webpack.prod.js",
        "build:model": "tsc -p ./modules/model/tsconfig.json --module CommonJS --outDir ./modules/model/cjs",
        "build:server": "tsc -p ./modules/server/tsconfig.json --module CommonJS --outDir ./modules/server/cjs",
        "build": "npm run build:model && npm run build:browser && npm run build:server && node scripts/post-build.js",
        "lint": "eslint .",
        "pretest": "tsc --noEmit --skipLibCheck && npm run lint",
        "test": "jest",
        "start": "npm --cwd ./dist run start",
        "browser": "npm --cwd ./modules/browser run start",
        "prepack": "npm run build",
        "pkg": "node scripts/pkg.js"
    },
    "lint-staged": {
        "./modules/*/{src,test}/**/*.{ts,tsx,json}": [
            "eslint . --fix"
        ]
    },
    "dependencies": {
        "@colyseus/schema": "^1.0.21",
        "tslib": "^2.2.0"
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.14.3",
        "@types/chai": "^4.2.15",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.23",
        "@types/jquery": "^3.5.5",
        "@types/lodash": "^4.14.168",
        "@types/node": "15.0.2",
        "@types/pluralize": "^0.0.29",
        "@types/react": "^17.0.3",
        "@types/react-dom": "^17.0.3",
        "@types/webfontloader": "^1.6.32",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "chai": "^4.3.4",
        "eslint": "^7.22.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-no-only-tests": "^2.4.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "fast-check": "^2.13.0",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^6.2.1",
        "html-webpack-plugin": "^5.3.1",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^11.0.0",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.7",
        "pkg": "^4.4.9",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.6",
        "ts-loader": "^8.0.18",
        "ts-node": "^9.1.1",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "~4.2.3",
        "webpack": "^5.31.2",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3"
    }
}
