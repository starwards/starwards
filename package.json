{
    "name": "starwards",
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "clean": "lerna run clean --stream --parallel",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettify": "prettier \"./modules/*/src/**/*.{ts,tsx,json}\" --write",
        "build": "lerna run build --stream --parallel && node scripts/post-build.js",
        "lint": "eslint .",
        "test": "lerna run test --stream --parallel",
        "start": "yarn --cwd ./dist start",
        "pkg": "node scripts/pkg.js"
    },
    "lint-staged": {
        "./modules/*/{src,test}/**/*.{ts,tsx,json}": [
            "eslint . --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "node scripts/pre-commit.js && yarn pretty-quick && lint-staged"
        }
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.13.1",
        "@ts-tools/build": "^2.1.1",
        "@ts-tools/node": "^2.1.1",
        "@ts-tools/webpack-loader": "^2.1.1",
        "@types/chai": "^4.2.12",
        "@types/express": "^4.17.7",
        "@types/jquery": "^3.5.1",
        "@types/lodash": "^4.14.159",
        "@types/mocha": "^8.0.3",
        "@types/nanoid": "^2.1.0",
        "@types/node": "13.13.2",
        "@types/plotly.js": "^1.50.21",
        "@types/react": "^16.9.46",
        "@types/react-dom": "^16.9.8",
        "@types/sinon": "~9.0.5",
        "@types/webfontloader": "^1.6.32",
        "@types/webpack": "^4.4.32",
        "@types/webpack-dev-middleware": "^3.7.0",
        "@types/webpack-hot-middleware": "^2.16.5",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "chai": "^4.2.0",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-no-only-tests": "^2.4.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.2",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.2.0",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "lint-staged": "^10.4.0",
        "mocha": "^8.1.1",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "pkg": "^4.4.9",
        "prettier": "^2.0.5",
        "pretty-quick": "^3.0.0",
        "rimraf": "^3.0.2",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "~4.0.2",
        "webpack": "^4.33.0",
        "webpack-cli": "^3.3.3",
        "webpack-dev-middleware": "^3.7.0",
        "webpack-dev-server": "^3.7.1",
        "webpack-hot-middleware": "^2.25.0",
        "webpack-merge": "^4.2.1"
    },
    "repository": "git@github.com:amir-arad/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "private": true
}
