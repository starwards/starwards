{
    "name": "starwards",
    "repository": "git@github.com:starwards/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "private": true,
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "node": ">= 18.3",
        "npm": ">= 7.5.4"
    },
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "clean": "rimraf ./modules/browser/dist ./modules/model/cjs ./modules/server/cjs",
        "prebuild": "npm run clean",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettify": "prettier \"./modules/*/src/**/*.{ts,tsx,json}\" --write",
        "build:browser": "webpack --config ./modules/browser/webpack.prod.js",
        "build:model": "tsc -p ./modules/model/tsconfig.json --module CommonJS --outDir ./modules/model/cjs",
        "build:server": "tsc -p ./modules/server/tsconfig.json --module CommonJS --outDir ./modules/server/cjs",
        "build": "npm run build:model && npm run build:server && npm run build:browser && node scripts/post-build.js",
        "lint": "eslint .",
        "test": "jest",
        "snapshots:ci": "docker-compose -f ./modules/e2e/docker-compose.yml up",
        "test:e2e": "playwright test",
        "test:format": "npm run lint",
        "test:types": "tsc --noEmit --skipLibCheck",
        "start": "npm --cwd ./dist run start",
        "browser": "npm --prefix ./modules/browser run start",
        "prepack": "npm run build",
        "pkg": "node scripts/pkg.js"
    },
    "lint-staged": {
        "./modules/*/{src,test}/**/*.{ts,tsx,json}": [
            "eslint . --fix"
        ]
    },
    "dependencies": {
        "@colyseus/schema": "^1.0.32",
        "detect-collisions": "^5.0.1",
        "normal-distribution": "^1.1.1",
        "tslib": "^2.4.0"
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.14.7",
        "@playwright/test": "^1.22.2",
        "@types/chai": "^4.3.1",
        "@types/d3-selection": "^3.0.2",
        "@types/express": "^4.17.12",
        "@types/jest": "^27.5.0",
        "@types/jquery": "^3.5.13",
        "@types/node": "18.0.0",
        "@types/pluralize": "^0.0.29",
        "@types/react": "^17.0.43",
        "@types/react-dom": "^17.0.16",
        "@types/webfontloader": "^1.6.34",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "chai": "^4.3.6",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-no-only-tests": "^2.6.0",
        "eslint-plugin-prettier": "^4.1.0",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fast-check": "^2.25.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.1",
        "jest": "^27.5.1",
        "jest-junit": "^14.0.0",
        "lint-staged": "^13.0.3",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.16",
        "pkg": "^5.6.0",
        "playwright": "^1.22.2",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "ts-essentials": "^9.1.2",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.7.0",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
        "typescript": "~4.7.4",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.9.0",
        "webpack-merge": "^5.8.0"
    }
}
