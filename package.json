{
    "name": "starwards",
    "repository": "git@github.com:starwards/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "private": true,
    "engines": {
        "node": ">= 15.11",
        "npm": ">= 7.5.4"
    },
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "clean": "rimraf ./modules/browser/dist ./modules/model/cjs ./modules/server/cjs",
        "prebuild": "npm run clean",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettify": "prettier \"./modules/*/src/**/*.{ts,tsx,json}\" --write",
        "build:browser": "webpack --config ./modules/browser/webpack.prod.js",
        "build:model": "tsc -p ./modules/model/tsconfig.json --module CommonJS --outDir ./modules/model/cjs",
        "build:server": "tsc -p ./modules/server/tsconfig.json --module CommonJS --outDir ./modules/server/cjs",
        "build": "npm run build:model && npm run build:browser && npm run build:server && node scripts/post-build.js",
        "lint": "eslint .",
        "pretest": "tsc --noEmit --skipLibCheck && npm run lint",
        "test": "jest",
        "start": "npm --cwd ./dist run start",
        "browser": "npm --cwd ./modules/browser run start",
        "prepack": "npm run build",
        "pkg": "node scripts/pkg.js"
    },
    "lint-staged": {
        "./modules/*/{src,test}/**/*.{ts,tsx,json}": [
            "eslint . --fix"
        ]
    },
    "dependencies": {
        "@colyseus/schema": "^1.0.32",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.14.7",
        "@types/chai": "^4.3.0",
        "@types/d3-selection": "^3.0.2",
        "@types/dat.gui": "^0.7.7",
        "@types/express": "^4.17.12",
        "@types/jest": "^27.4.0",
        "@types/jquery": "^3.5.13",
        "@types/node": "17.0.17",
        "@types/pluralize": "^0.0.29",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/webfontloader": "^1.6.34",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "chai": "^4.3.6",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-no-only-tests": "^2.6.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "fast-check": "^2.21.0",
        "file-loader": "^6.2.0",
        "fork-ts-checker-webpack-plugin": "^7.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "lint-staged": "^12.3.4",
        "ncp": "^2.0.0",
        "nodemon": "^2.0.7",
        "pkg": "^5.5.2",
        "prettier": "^2.3.0",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.5.0",
        "tsconfig-paths-webpack-plugin": "^3.5.2",
        "typescript": "~4.5.5",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4",
        "webpack-merge": "^5.8.0"
    }
}
