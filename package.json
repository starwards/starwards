{
    "name": "starwards",
    "repository": "git@github.com:starwards/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "private": true,
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "node": ">= 20.19.5",
        "npm": ">= 10.2.4"
    },
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "clean": "rimraf ./modules/browser/dist ./modules/browser/dist ./modules/core/cjs ./modules/server/cjs",
        "postbuild": "node scripts/post-build.js",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettify": "prettier --ignore-path .eslintignore \"./modules/*/src/**/*.{ts,tsx,json}\" -w",
        "build:browser": "npm --prefix ./modules/browser run build",
        "build:core": "npm --prefix ./modules/core run build",
        "build:unity": "npm --prefix ./modules/core run build:unity",
        "build:node-red": "npm --prefix ./modules/node-red run build",
        "build:server": "npm --prefix ./modules/server run build",
        "build": "npm run build:core && concurrently --kill-others-on-fail -c blue,yellow,green,magenta \"npm:build:*(!core)\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "xstate-typegen": "xstate typegen \"./modules/core/src/**/*.ts?(x)\"",
        "prettier": "prettier --ignore-path .eslintignore -c **/*.{js,ts,jsx,tsx}",
        "test": "jest",
        "snapshots:ci": "docker-compose -f ./modules/e2e/docker-compose.yml up",
        "test:e2e": "playwright test",
        "test:format": "npm run prettier && npm run lint",
        "test:types": "tsc --noEmit --skipLibCheck",
        "start": "npm --cwd ./dist run start",
        "browser": "npm --prefix ./modules/browser run start",
        "node-red": "bash ./scripts/dev-node-red.sh",
        "prepack": "npm run build",
        "pkg": "node scripts/pkg.js",
        "release": "bash ./scripts/release.sh"
    },
    "lint-staged": {
        "./modules/*/{src,test}/**/*.{ts,tsx,json}": [
            "prettier --ignore-path .eslintignore -cw **/*.{js,ts} && eslint . --fix"
        ]
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.15.8",
        "@jgoz/jest-esbuild": "^1.0.10",
        "@playwright/test": "^1.56.1",
        "@rollup/plugin-sucrase": "^5.0.2",
        "@types/chai": "^4.3.20",
        "@types/d3-selection": "^3.0.11",
        "@types/express": "^4.17.25",
        "@types/jest": "^29.5.14",
        "@types/jquery": "^3.5.33",
        "@types/node": "^20.12.7",
        "@types/node-red": "^1.3.5",
        "@types/node-red-node-test-helper": "^0.3.5",
        "@types/pluralize": "^0.0.33",
        "@types/react": "^17.0.89",
        "@types/react-dom": "^17.0.26",
        "@types/sinon": "^17.0.4",
        "@types/supertest": "^6.0.3",
        "@types/webfontloader": "^1.6.38",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@xstate/cli": "^0.5.17",
        "@xstate/react": "^4.1.3",
        "chai": "^4.5.0",
        "concurrently": "^8.2.2",
        "copyfiles": "^2.4.1",
        "esbuild": "^0.25.12",
        "esbuild-jest": "^0.5.0",
        "esbuild-loader": "^4.1.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.2",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "fast-check": "^3.23.2",
        "file-loader": "^6.2.0",
        "globby": "^14.1.0",
        "html-webpack-plugin": "^5.6.4",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "lint-staged": "^15.5.2",
        "ncp": "^2.0.0",
        "node-red": "^3.1.15",
        "node-red-node-test-helper": "^0.3.5",
        "pkg": "^5.8.1",
        "playwright": "^1.56.1",
        "prettier": "^3.6.2",
        "pretty-quick": "^4.2.2",
        "rimraf": "^5.0.10",
        "rollup": "^4.52.5",
        "supertest": "^6.3.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3",
        "webpack": "^5.102.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.2",
        "webpack-merge": "^5.10.0"
    }
}
