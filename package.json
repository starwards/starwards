{
    "name": "starwards",
    "repository": "git@github.com:starwards/starwards.git",
    "author": "amir-arad <greenshade@gmail.com>",
    "private": true,
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "node": ">= 18.3",
        "npm": ">= 7.5.4"
    },
    "workspaces": [
        "modules/*"
    ],
    "scripts": {
        "clean": "rimraf ./modules/browser/dist ./modules/core/cjs ./modules/server/cjs",
        "prebuild": "npm run clean",
        "pretty-quick": "pretty-quick --staged --pattern \"./modules/*/src/**/*.{ts,tsx,json}\"",
        "prettify": "prettier \"./modules/*/src/**/*.{ts,tsx,json}\" --write",
        "build:browser": "webpack --config ./modules/browser/webpack.prod.js",
        "build:core": "tsc -p ./modules/core/tsconfig.json --module CommonJS --outDir ./modules/core/cjs",
        "build:server": "tsc -p ./modules/server/tsconfig.json --module CommonJS --outDir ./modules/server/cjs",
        "build": "npm run build:core && npm run build:server && npm run build:browser && node scripts/post-build.js",
        "lint": "eslint .",
        "test": "jest",
        "snapshots:ci": "docker-compose -f ./modules/e2e/docker-compose.yml up",
        "test:e2e": "playwright test",
        "test:format": "npm run lint",
        "test:types": "tsc --noEmit --skipLibCheck",
        "start": "npm --cwd ./dist run start",
        "browser": "npm --prefix ./modules/browser run start",
        "prepack": "npm run build",
        "pkg": "node scripts/pkg.js",
        "release": "bash ./scripts/release.sh"
    },
    "lint-staged": {
        "./modules/*/{src,test}/**/*.{ts,tsx,json}": [
            "eslint . --fix"
        ]
    },
    "devDependencies": {
        "@colyseus/loadtest": "^0.14.7",
        "@playwright/test": "^1.24.2",
        "@types/chai": "^4.3.3",
        "@types/d3-selection": "^3.0.3",
        "@types/express": "^4.17.12",
        "@types/jest": "^27.5.0",
        "@types/jquery": "^3.5.13",
        "@types/node": "18.6.5",
        "@types/pluralize": "^0.0.29",
        "@types/react": "^17.0.43",
        "@types/react-dom": "^17.0.16",
        "@types/supertest": "^2.0.12",
        "@types/webfontloader": "^1.6.34",
        "@typescript-eslint/eslint-plugin": "^5.33.0",
        "@typescript-eslint/parser": "^5.33.0",
        "chai": "^4.3.6",
        "eslint": "^8.21.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-no-only-tests": "^3.0.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "fast-check": "^3.1.1",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.1",
        "jest": "^27.5.1",
        "jest-junit": "^14.0.0",
        "lint-staged": "^13.0.3",
        "ncp": "^2.0.0",
        "pkg": "^5.8.0",
        "playwright": "^1.24.2",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2",
        "supertest": "^6.2.4",
        "ts-essentials": "^9.2.0",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths-webpack-plugin": "^4.0.0",
        "typescript": "~4.7.4",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.9.3",
        "webpack-merge": "^5.8.0"
    }
}
